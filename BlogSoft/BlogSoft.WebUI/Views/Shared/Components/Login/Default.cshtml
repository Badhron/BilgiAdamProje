@model User

<div id="login" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Login</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" asp-for="Email" class="form-control" required="required" placeholder="User ID / Email">
                    </div>
                    <div class="form-group">
                        <div class="clearfix">
                            <label>Password</label>
                        </div>
                        <input type="password" asp-for="Password" class="form-control" required="required" placeholder="Password">
                    </div>
                </div>
                <div class="modal-footer justify-content-between" style="float: right;">
                    <a class="subscribe-btn" href="#register" data-dismiss="modal" data-toggle="modal">Register</a>
                    <button class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="register" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">

            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Register</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" asp-for="Email" class="form-control" required="required" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" asp-for="UserName" class="form-control" required="required" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <div class="clearfix">
                            <label>Password</label>
                        </div>
                        <input type="password" asp-for="Password" class="form-control" required="required" placeholder="Password">
                    </div>
                </div>
                <div class="modal-footer justify-content-between" style="float: right;">
                    <a class="subscribe-btn" href="#login" data-dismiss="modal" data-toggle="modal">Login</a>
                    <button class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>