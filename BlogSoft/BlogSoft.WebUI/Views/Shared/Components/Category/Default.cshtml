@model List<Category>


<div class="list-group" style="margin-top:20px;">
    @foreach (Category category in Model)
    {
<a asp-controller="Home" asp-action="PostsByCategory" asp-route-id="@category.ID" class="list-group-item list-group-item-action"><img class="img-fluid rounded-circle" src="@category.ImageUrl" style="width:40px;height:40px;">  @category.Name</a>}
</div>
