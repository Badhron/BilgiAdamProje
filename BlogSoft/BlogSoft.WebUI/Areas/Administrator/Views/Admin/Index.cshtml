@{
    ViewData["Title"] = "Admin";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-bookmark"></span> Admin Panel
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xl-12 col-md-12" style="text-align:center;font-size: 50px;font-weight: bold; color:white;">
                            <p>
                                <a asp-area="Administrator" asp-controller="User" asp-action="Index" class="btn btn-danger btn-lg" role="button"><span class="fa fa-user fa-2x"></span> <br />User</a>
                                <a asp-area="Administrator" asp-controller="Post" asp-action="Index" class="btn btn-warning btn-lg" role="button"><span class="fa fa-newspaper-o fa-2x"></span> <br />Post</a>
                                <a asp-area="Administrator" asp-controller="Category" asp-action="Index" class="btn btn-success btn-lg" role="button"><span class="fa fa-tag fa-2x"></span> <br />Category</a>
                            </p>
                        </div>
                        <div class="col-xl-12 col-md-12" style="text-align:center;font-size: 50px;font-weight: bold; color:white;">
                            <p>
                                <a asp-area="Administrator" asp-controller="Comment" asp-action="Index" class="btn btn-success btn-lg" role="button"><span class="fa fa-comment fa-2x"></span> <br />Comment</a>
                                <a asp-area="Administrator" asp-controller="Tag" asp-action="Index" class="btn btn-warning btn-lg" role="button"><span class="fa fa-hashtag fa-2x"></span> <br />Tag</a>
                                <a asp-area="Administrator" asp-controller="PostTag" asp-action="Index" class="btn btn-danger btn-lg" role="button"><span class="fa fa-tags fa-2x"></span> <br />PostTag</a>
                            </p>
                        </div>
                    </div>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-success btn-lg btn-block" role="button"><span class="glyphicon glyphicon-globe"></span> Website</a>
                </div>
            </div>
        </div>
    </div>
</div>